<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hotel Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      body {
        background-color: #f4f6f9;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
      .sidebar {
        height: 100vh;
        background: #1f2d3d;
        color: #fff;
        padding-top: 1rem;
        width: 240px;
        flex-shrink: 0;
      }
      .sidebar a {
        color: #b0bec5;
        display: block;
        padding: 1rem;
        text-decoration: none;
        font-weight: 500;
      }
      .sidebar a:hover,
      .sidebar .active {
        background: #263645;
        color: #ffffff;
      }
      .content {
        margin-left: 240px;
        padding: 2rem;
        width: calc(100% - 240px);
      }
      .card-icon {
        font-size: 2rem;
      }
      .table-responsive {
        max-height: 300px;
        overflow-y: auto;
      }
      .card-header {
        background-color: #f1f3f5;
        font-weight: 600;
      }
      h2,
      h5 {
        color: #343a40;
      }
    </style>
  </head>
  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <div class="sidebar position-fixed">
        <h4 class="text-center mb-4">Hotel Admin</h4>
        <a href="#" class="active"
          ><i class="fas fa-chart-line me-2"></i> Dashboard</a
        >
        <a href="#"><i class="fas fa-bed me-2"></i> Rooms</a>
        <a href="#"><i class="fas fa-user-friends me-2"></i> Guests</a>
        <a href="#"><i class="fas fa-calendar-check me-2"></i> Bookings</a>
        <a href="#"><i class="fas fa-credit-card me-2"></i> Payments</a>
        <a href="#"><i class="fas fa-concierge-bell me-2"></i> Services</a>
        <a href="#"><i class="fas fa-users-cog me-2"></i> Staff Management</a>
        <a href="#"><i class="fas fa-cogs me-2"></i> Settings</a>
        <a href="#"><i class="fas fa-sign-out-alt me-2"></i> Logout</a>
      </div>

      <!-- Main Content -->
      <div class="content">
        <div class="container-fluid">
          <h2 class="mb-4">Dashboard Overview</h2>

          <!-- Stats Cards -->
          <div class="row g-3">
            <div class="col-md-3">
              <div class="card text-white" style="background-color: #007bff">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h5>Total Rooms</h5>
                      <h3>120</h3>
                    </div>
                    <i class="fas fa-hotel card-icon"></i>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-white" style="background-color: #20c997">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h5>Occupied</h5>
                      <h3>85</h3>
                    </div>
                    <i class="fas fa-door-closed card-icon"></i>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-white" style="background-color: #ffc107">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h5>Today's Bookings</h5>
                      <h3>15</h3>
                    </div>
                    <i class="fas fa-calendar-plus card-icon"></i>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-white" style="background-color: #dc3545">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h5>Pending Payments</h5>
                      <h3>7</h3>
                    </div>
                    <i class="fas fa-money-bill-wave card-icon"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Charts & Tables -->
          <div class="row mt-4">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">Occupancy Rate</div>
                <div class="card-body">
                  <canvas id="occupancyChart" height="200"></canvas>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">Revenue This Week</div>
                <div class="card-body">
                  <canvas id="revenueChart" height="200"></canvas>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Bookings Table -->
          <div class="card mt-4">
            <div class="card-header">Recent Bookings</div>
            <div class="card-body table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Guest</th>
                    <th>Room</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Ali Khan</td>
                    <td>301</td>
                    <td>2025-05-13</td>
                    <td>2025-05-16</td>
                    <td><span class="badge bg-success">Checked In</span></td>
                  </tr>
                  <tr>
                    <td>Sara Ahmed</td>
                    <td>215</td>
                    <td>2025-05-12</td>
                    <td>2025-05-14</td>
                    <td>
                      <span class="badge bg-warning text-dark">Pending</span>
                    </td>
                  </tr>
                  <tr>
                    <td>John Doe</td>
                    <td>110</td>
                    <td>2025-05-13</td>
                    <td>2025-05-15</td>
                    <td>
                      <span class="badge bg-info text-dark">Reserved</span>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Script -->
    <script>
      const occupancyCtx = document
        .getElementById("occupancyChart")
        .getContext("2d");
      const occupancyChart = new Chart(occupancyCtx, {
        type: "line",
        data: {
          labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
          datasets: [
            {
              label: "Occupancy %",
              data: [70, 75, 80, 85, 78, 90, 95],
              borderColor: "#007bff",
              backgroundColor: "rgba(0, 123, 255, 0.1)",
              fill: true,
            },
          ],
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } },
        },
      });

      const revenueCtx = document
        .getElementById("revenueChart")
        .getContext("2d");
      const revenueChart = new Chart(revenueCtx, {
        type: "bar",
        data: {
          labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
          datasets: [
            {
              label: "Revenue ($)",
              data: [1500, 2000, 1800, 2200, 2100, 2500, 2700],
              backgroundColor: "#20c997",
            },
          ],
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } },
        },
      });
    </script>
  </body>
</html>
