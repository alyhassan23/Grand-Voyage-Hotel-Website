<!-- views/about.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About</title>
    <link rel="stylesheet" href="/styles/about.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href="/Fav/favicon-32x32.png" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.1/src/regular/style.css"
    />
  </head>
  <body>
    <div class="nav_hero_section_background_img">
      <div class="navbar">
        <div class="nav">
          <div class="nav_title">
            <img src="/Fav/favicon.ico" alt="Logo" />
            <h1>GrandVoyage</h1>
          </div>
          <div class="nav_items">
            <a href="/">Home</a>
            <a href="/about">About us</a>
            <a href="/blogs">Blogs</a>
            <a href="/news">News</a>
            <a href="/feedback">Feedback</a>
            <a href="/contact">Contact us</a>
            <a href="/admin_login">Admin</a>
          </div>
        </div>
      </div>

      <div class="hero_section">
        <div class="hero_content">
          <h1>About GrandVoyage</h1>
        </div>
      </div>
    </div>

    <section class="about">
      <img src="/images/Hotel-img.jpeg" alt="Hotel View" />
      <div class="about-content">
        <h2>Welcome to GrandVoyage</h2>
        <p>
          At GrandVoyage, we bring your dream vacation to life with luxury,
          comfort, and breathtaking views. Nestled in the serene beauty of
          Murree, our hotel is perfect for families, couples, and adventurers.
        </p>
        <p>
          Whether it's a peaceful retreat or a memorable celebration, our team
          ensures every moment is special with personalized hospitality and
          high-end amenities.
        </p>
      </div>
    </section>

    <section class="info-cards">
      <div class="card">
        <h3>Our Mission</h3>
        <p>
          To deliver exceptional hospitality through world-class comfort and
          personalized service.
        </p>
      </div>
      <div class="card">
        <h3>Our Vision</h3>
        <p>
          To be Pakistan’s leading boutique hotel chain known for elegance and
          customer satisfaction.
        </p>
      </div>
      <div class="card">
        <h3>Our Values</h3>
        <p>
          Integrity, Excellence, Warmth, Innovation, and Respect guide every
          decision.
        </p>
      </div>
    </section>

    <section class="team_section">
      <h2>Meet Our Team</h2>
      <div class="team_grid">
        <% team.forEach(member => { %>
        <div class="team_member">
          <img src="<%= member.image %>" alt="<%= member.role %>" />
          <h4><%= member.name %></h4>
          <p><%= member.role %></p>
        </div>
        <% }) %>
      </div>
    </section>

    <section class="why_us_section">
      <h2>Why Choose GrandVoyage?</h2>
      <div class="features">
        <div>
          <h4>Luxury Rooms</h4>
          <p>
            Beautifully designed rooms with scenic views, premium bedding, and
            high-end amenities.
          </p>
        </div>
        <div>
          <h4>World-Class Dining</h4>
          <p>
            Enjoy gourmet dishes curated by award-winning chefs with global and
            local flavors.
          </p>
        </div>
        <div>
          <h4>Eco-Friendly Stay</h4>
          <p>
            Committed to sustainable practices, reducing waste, and conserving
            nature.
          </p>
        </div>
      </div>
    </section>

    <section class="testimonials_section">
      <h2>What Our Guests Say</h2>
      <div class="testimonials">
        <% testimonials.forEach(review => { %>
        <div class="testimonial-box">
          <p>"<%= review.message %>"</p>
          <h4>— <%= review.name %></h4>
        </div>
        <% }) %>
      </div>
    </section>

    <%- include('partials/footer') %>
  </body>
</html>
