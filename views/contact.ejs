<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/styles/contact.css" />
    <title>Contact | GrandVoyage</title>
  </head>
  <body>
    <div class="nav_hero_section_background_img">
      <%- include('partials/navbar') %>

      <div class="hero_section">
        <div class="hero_content">
          <h1>Contact GrandVoyage</h1>
        </div>
      </div>
    </div>

    <!-- Contact Section -->
    <section class="contact_section">
      <div class="contact_form">
        <h2>Send a Message</h2>
        <form action="/contact" method="POST">
          <input type="text" name="name" placeholder="Your Name" required />
          <input type="email" name="email" placeholder="Your Email" required />
          <input type="text" name="subject" placeholder="Subject" required />
          <textarea
            name="message"
            rows="6"
            placeholder="Your Message"
            required
          ></textarea>
          <button type="submit">Send Message</button>
        </form>

        <% if (successMessage) { %>
        <p class="success"><%= successMessage %></p>
        <% } %>
      </div>

      <div class="contact_info">
        <h2>Get in Touch</h2>
        <p>
          <i class="ph ph-map-pin"></i> 123 Mountain View Rd, Murree, Pakistan
        </p>
        <p><i class="ph ph-phone"></i> +92 300 1234567</p>
        <p><i class="ph ph-envelope"></i> info@grandvoyage.com</p>
        <p><i class="ph ph-clock"></i> Mon - Sun: 8:00 AM - 10:00 PM</p>
      </div>
    </section>

    <!-- Map -->
    <div class="map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!..."
        width="100%"
        height="100%"
        style="border: 0"
        allowfullscreen=""
        loading="lazy"
      >
      </iframe>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>
    <script src="/index.js"></script>
  </body>
</html>
